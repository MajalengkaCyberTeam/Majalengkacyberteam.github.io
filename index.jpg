<script>
    document.querySelector('form').addEventListener('submit', function(event) {
        event.preventDefault(); // Menghentikan perilaku default form submit
        let searchTerm = document.getElementById('search').value.toLowerCase(); // Mendapatkan nilai kata kunci pencarian dan mengonversi menjadi lowercase
        let dashboardItems = document.querySelectorAll('#dashboard p'); // Mendapatkan semua elemen <p> di dalam div dengan id "dashboard"
        
        let found = false; // Inisialisasi variable untuk menunjukkan apakah informasi ditemukan
        
        // Membuat ekspresi reguler dari kata kunci pencarian dengan menambahkan tanda wildcard (*)
        let regex = new RegExp(searchTerm.replace(/[-\/\\^$*+?.()|[\]{}]/g, '\\$&').replace(/\s+/g, '.*'), 'i');
        
        dashboardItems.forEach(function(item) {
            let text = item.textContent.toLowerCase(); // Mengonversi teks di setiap elemen menjadi lowercase
            if (text.match(regex)) { // Memeriksa apakah teks cocok dengan ekspresi reguler
                item.style.display = 'block'; // Jika iya, tampilkan elemen
                found = true; // Informasi ditemukan
            } else {
                item.style.display = 'none'; // Jika tidak, sembunyikan elemen
            }
        });
        
        // Menampilkan pesan "Informasi tidak ditemukan" jika tidak ada informasi yang ditemukan
        if (!found) {
            document.getElementById('not-found').style.display = 'block';
        } else {
            document.getElementById('not-found').style.display = 'none';
        }
    });
</script>
